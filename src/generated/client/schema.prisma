generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/client"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @map("id")
  name String @map("name")

  @@map("user")
}

model Task {
  id          String    @id @default(uuid()) @map("id")
  title       String    @map("title")
  description String?   @map("description")
  dueDate     DateTime? @map("due_date")
  completed   Boolean   @default(false) @map("completed")
  uid         String    @map("uid")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("task")
}

model Car {
  id           String   @id @default(uuid()) @map("id")
  name         String   @map("name")
  seq          Int      @map("seq")
  maker        String   @map("maker")
  model        String   @map("model")
  modelYear    Int      @map("model_year")
  licensePlate String   @map("license_plate")
  tankCapacity Int      @map("tank_capacity")
  uid          String   @map("uid")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("car")
}

model Refueling {
  id             String   @id @default(uuid()) @map("id")
  refuelDatetime DateTime @map("refuel_datetime")
  odometer       Int      @map("odometer")
  fuelType       String   @map("fuel_type")
  price          Int      @map("price")
  totalCost      Int      @map("total_cost")
  isFull         Boolean  @map("is_full")
  gasStand       String   @map("gas_stand")
  uid            String   @map("uid")
  carId          String   @map("car_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("refueling")
}

model Section {
  id        String   @id @default(uuid()) @map("id")
  name      String   @map("name")
  seq       Int      @map("seq")
  uid       String   @map("uid")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("section")
}
